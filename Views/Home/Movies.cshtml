@{
    ViewBag.Title = "My Movies";
}

@model IEnumerable<MovieInfo>

<div>
    <table>
        <thead>
            <tr>
                <th>
                    Category
                </th>
                <th>
                    Title
                </th>
                <th>
                    Year
                </th>
                <th>
                    Director
                </th>
                <th>
                    Rating
                </th>
                <th>
                    Edited
                </th>
                <th>
                    Lent To
                </th>
                <th>
                    Notes
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
            <tr>
                <td>@x.Category</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>
                <td>
                    <form id="@x.MovieId" asp-action="EditView" method="post">
                        <input type="hidden" value="@x.MovieId" name="movieId" />
                        <span class="card-text p-1">
                            <button type="submit" class="btn btn-primary">
                                Edit
                            </button>
                        </span>
                    </form>
                </td>
                <td>
                    <form id="@x.MovieId" asp-action="Delete" method="post">
                        <input type="hidden" value="@x.MovieId" name="movieId" />
                        <span class="card-text p-1">
                            <button type="submit" class="btn btn-primary">
                                Delete
                            </button>
                        </span>
                    </form>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
